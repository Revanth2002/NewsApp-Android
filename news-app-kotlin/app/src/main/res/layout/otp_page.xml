<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.VerificationActivity">


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/textcontentlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_login"
            android:background="#FFFFFF"
            android:text="OTP Verification"
            android:elevation="0dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="45dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:paddingTop="25dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="10dp">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_textsub"
            android:background="#FFFFFF"
            android:text="Verification code is sent to your mobile number"
            android:elevation="0dp"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#E4201F1F"
            android:layout_centerHorizontal="true"
            android:paddingTop="0dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">
        </TextView>
    </LinearLayout>


    <EditText

        android:id="@+id/otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textcontentlogin"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:drawablePadding="10dp"
        android:hint="4 digit code"
        android:inputType="text"
        android:maxLength="4"
        android:paddingBottom="20dp">


    </EditText>


    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/otp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Get Started"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:background="#3F51B5"
        android:enabled="true"/>


</RelativeLayout>