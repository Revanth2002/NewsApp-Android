<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/profile_img"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/avatar" />

                    <TextView
                        android:id="@+id/textshowwelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="Manage your profile"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_id_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:background="@color/white"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/personal_info_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/ic_baseline_account_circle_24" />

                    <TextView
                        android:id="@+id/personal_info_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/personal_info_img"
                        android:layout_marginStart="50dp"
                        android:text="Personal Information"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_id_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:background="@color/white"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/activity"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/activity_note" />

                    <TextView
                        android:id="@+id/activityname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/activity"
                        android:layout_marginStart="50dp"
                        android:text="Activity"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_id_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:background="@color/white"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/referafriend"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/friend" />

                    <TextView
                        android:id="@+id/referafriendname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/referafriend"
                        android:layout_marginStart="50dp"
                        android:text="Refer a Friend"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_id_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:background="@color/white"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/settings"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/settings" />

                    <TextView
                        android:id="@+id/settingname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/settings"
                        android:layout_marginStart="50dp"
                        android:text="Settings"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative_id_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:background="@color/white"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/logout"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/signout" />

                    <TextView
                        android:id="@+id/logoutname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/logout"
                        android:layout_marginStart="50dp"
                        android:text="Sign Out"
                        android:textSize="18sp" />
                </RelativeLayout>


            </LinearLayout>

        </ScrollView>

</FrameLayout>

